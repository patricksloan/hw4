<h1><%= @place["name"] %></h1>

<h2>My Entries</h2>
<% for entry in @entries %>
  <%# Only show entries for the current logged-in user %>
  <% if entry["user_id"] == session["user_id"] %>
    <h3><%= entry["title"] %></h3>
    <h4><%= entry["occurred_on"] %></h4>
    <p><%= entry["description"] %></p>

    <%# Check if there's an uploaded image %>
    <% if entry.uploaded_image.attached? %>
      <p>Uploaded Image:</p>
      <%= image_tag entry.uploaded_image, width: "300" %> <%# Display image with a width of 300px %>
    <% end %>

  <%# End of check for current user's entry %>
  <% end %>
<% end %>

<p>
  <a href="/entries/new?place_id=<%= @place["id"] %>">New Entry</a>
</p>

<p>
  <a href="/places">Back to All Places</a>
</p>